{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://leapbackend.onrender.com/api"
      },
      {
        "source": "/socket.io/**",
        "destination": "https://leapbackend.onrender.com/socket.io/"
      }
    ],
    "redirects": [
      {
        "source": "/localhost:5001/api/**",
        "destination": "/api/**",
        "type": 301
      },
      {
        "source": "/localhost:5001/socket.io/**",
        "destination": "/socket.io/**",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "cleanUrls": true
  }
}
